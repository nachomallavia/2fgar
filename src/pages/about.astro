---
import Layout from '../layouts/Layout.astro';
import TeamSection from '../components/TeamSection.astro';
import { team } from '../data/team';
import { about } from '../i18n/about';
---

<Layout title={about.title}>
  <div class="container mx-auto px-6 py-12">
    <section class="mb-20">
      <h1 class="text-4xl font-bold mb-8">{about.intro.title}</h1>
      <div class="max-w-3xl">
        {about.intro.description.map(paragraph => (
          <p class="text-lg leading-relaxed mb-6">
            {paragraph}
          </p>
        ))}
      </div>
    </section>

    <section>
      <h2 class="text-3xl font-bold mb-12">{about.team.title}</h2>
      <TeamSection members={team} showAll={true} />
    </section>
  </div>
</Layout>