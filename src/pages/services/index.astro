---
import Layout from '../../layouts/Layout.astro';
import { services } from '../../i18n';

---

<Layout title="Servicios">
  <div class="container mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold mb-12">Nuestros Servicios</h1>
    
    <div class="grid md:grid-cols-2 gap-12">
      {services.map(service => (
        <a href={service.href} class="group">
          <div class="relative aspect-video overflow-hidden rounded-lg mb-6">
            <img 
              src={service.image} 
              alt={service.title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <h2 class="text-2xl font-bold mb-2 group-hover:text-gray-600 transition-colors">
            {service.title}
          </h2>
          <p class="text-gray-600">{service.description}</p>
        </a>
      ))}
    </div>
  </div>
</Layout>