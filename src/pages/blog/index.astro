---
import Layout from '../../layouts/Layout.astro';
import { blogPosts } from '../../data/blog';

const [latestPost, ...remainingPosts] = blogPosts;
---

<Layout title="Blog">
  <div class="container mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold mb-12">Blog</h1>

    <!-- Featured Latest Post -->
    <a href={`/blog/${latestPost.id}`} class="group block mb-16">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div class="relative aspect-video md:aspect-square overflow-hidden rounded-lg">
          <img 
            src={latestPost.image}
            alt={latestPost.title}
            class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-300"
          />
        </div>
        <div>
          <span class="text-sm text-gray-500 mb-4 block">
            {new Date(latestPost.date).toLocaleDateString()} • {latestPost.author}
          </span>
          <h2 class="text-3xl font-bold mb-4 group-hover:text-gray-600 transition-colors">
            {latestPost.title}
          </h2>
          <p class="text-xl text-gray-600 mb-6">{latestPost.excerpt}</p>
          <span class="text-black font-medium group-hover:text-gray-600 transition-colors inline-flex items-center gap-2">
            Read More
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </span>
        </div>
      </div>
    </a>

    <!-- Divider -->
    <div class="border-t border-gray-200 mb-16"></div>

    <!-- Remaining Posts Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
      {remainingPosts.map((post) => (
        <a href={`/blog/${post.id}`} class="group">
          <div class="relative aspect-video overflow-hidden rounded-lg mb-4">
            <img 
              src={post.image}
              alt={post.title}
              class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <span class="text-sm text-gray-500 mb-2 block">
            {new Date(post.date).toLocaleDateString()} • {post.author}
          </span>
          <h2 class="text-xl font-bold mb-2 group-hover:text-gray-600 transition-colors">
            {post.title}
          </h2>
          <p class="text-gray-600">{post.excerpt}</p>
        </a>
      ))}
    </div>
  </div>
</Layout>