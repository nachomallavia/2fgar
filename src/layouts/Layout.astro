---
import { ViewTransitions } from 'astro:transitions';
import { company } from '../config/company';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/animations.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Modern Architecture Studio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | {company.fullName}</title>
    <ViewTransitions />
  </head>
  <body class="bg-white">
    <Header />
    <main class="pt-20">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  @keyframes slide-left {
    from {
      transform: translateX(30px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  :root {
    --animation-slide: slide-left 0.3s ease-out;
    --animation-fade: fade-in 0.3s ease-out;
  }

  ::view-transition-old(root) {
    animation: none;
  }

  ::view-transition-new(root) {
    animation: none;
  }
</style>