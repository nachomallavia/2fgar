---
interface TeamMember {
  name: string;
  role: string;
  image: string;
  bio: string;
}

interface Props {
  members: TeamMember[];
  showAll?: boolean;
}

const { members, showAll = false } = Astro.props;
const displayMembers = showAll ? members : members.slice(0, 3);
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
  {displayMembers.map((member) => (
    <div class="fade">
      <div class="aspect-square mb-4 overflow-hidden rounded-lg">
        <img 
          src={member.image} 
          alt={member.name}
          class="object-cover w-full h-full hover:scale-105 transition-transform duration-300"
        />
      </div>
      <h3 class="text-xl font-bold mb-2">{member.name}</h3>
      <p class="text-gray-600 mb-2">{member.role}</p>
      <p>{member.bio}</p>
    </div>
  ))}
</div>