---
import { company } from '../config/company';
import { common } from '../i18n';

const currentYear = new Date().getFullYear();

const sitemap = {
  Empresa: [
    { label: 'Nosotros', href: '/about' },
    { label: 'Proyectos', href: '/projects' },
    { label: 'Blog', href: '/blog' }
  ],
  Servicios: [
    { label: 'Arquitectura', href: '/services/architecture' },
    { label: 'Diseño Interior', href: '/services/interior-design' },
    { label: 'Planificación Urbana', href: '/services/urban-planning' },
    { label: 'Consultoría', href: '/services/consulting' }
  ],
  Legal: [
    { label: 'Política de Privacidad', href: '/legal/privacy-policy' },
    { label: 'Términos de Servicio', href: '/legal/terms' }
  ]
};

const socials = [
  {
    label: 'Instagram',
    href: 'https://www.instagram.com/2fg.arq/',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
