    </svg>`
  }
];
---

<footer class="bg-gray-900 text-white pt-16 pb-8">
  <div class="container mx-auto px-6">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-16">
      <!-- Company Info -->
      <div class="col-span-2 md:col-span-1">
        <h2 class="text-2xl font-bold mb-4">{company.fullName}</h2>
        <p class="text-gray-400 mb-6">Creando espacios que inspiran y transforman comunidades.</p>
        <div class="flex gap-4">
          {socials.map(social => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-white transition-colors"
              aria-label={social.label}
            >
              <Fragment set:html={social.icon} />
            </a>
          ))}
        </div>
      </div>

      <!-- Sitemap -->
      {Object.entries(sitemap).map(([category, links]) => (
        <div>
          <h3 class="font-bold mb-4">{category}</h3>
          <ul class="space-y-2">
            {links.map(link => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-400 hover:text-white transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-400 text-sm">
          © {currentYear} {company.fullName}. {common.footer.rights}.
        </p>
        <div class="flex gap-8">
          <a href="/legal/privacy-policy" class="text-gray-400 hover:text-white text-sm transition-colors">
            {common.footer.privacy}
          </a>
          <a href="/legal/terms" class="text-gray-400 hover:text-white text-sm transition-colors">
            {common.footer.terms}
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>